<Window
    x:Class="TestApp.TestApp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TestApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="NeonShell Test App"
    Height="400"
    Width="600">

    <Grid Background="#121212">
        <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    Spacing="20">
            <TextBlock Text="NeonShell Test Application" 
                       Style="{StaticResource NeonTextBlock}"
                       FontSize="24"
                       HorizontalAlignment="Center"/>
            
            <TextBlock Text="This app was launched from NeonShell!" 
                       Style="{StaticResource NeonTextBlock}"
                       FontSize="16"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       TextWrapping="Wrap"/>
            
            <Button Content="Show Notification" 
                    Style="{StaticResource GlowButton}"
                    Click="ShowNotification_Click"
                    HorizontalAlignment="Center"/>
            
            <TextBlock x:Name="LogText" 
                       Style="{StaticResource NeonTextBlock}"
                       FontSize="14"
                       Margin="20"
                       TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>
